<h2>Cards カード</h2>
<br />
<br />
<div >
<%= will_paginate @cards %>
<div>
<div style="text-align:left; width: 400px; margin:auto;">

  <% @cards.each do |card| %>
  	    <div class="round" id="cards">
    Front: 
      <strong><%= card.card_front %></strong> <br />
    Back:
      <strong><%= card.card_back %></strong><br />
    Created <%= time_ago_in_words(card.created_at) %> ago.<br />
    This card will return for review in <%= pluralize(card.review_date.day - Date.today.day, 'day')  %>.<br />
      <%= link_to "View", card %>
      <% if current_user.id == card.user_id %>
      | <%= link_to "Delete", card, :method => :delete, :confirm => "本当に？　You sure?",
                                :title => "Delete #{card.card_front}" %><br /> This is your card. あなたのカードです。
      <% else %>
   <div style="float:right">    <%= button_to "Add to deck", copy_card_path(card), :name => "Add to deck", :class => "copysubmit" %> </div> 
  <% end %>
    </div>
<br />
  <% end %>
</div>
</div>
<%= will_paginate @cards %>
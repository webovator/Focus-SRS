<div style="float:right; width:210px;">
<% if user_signed_in? %>
 Welcome <%= current_user.name %>. Not you?
 <%= link_to "Sign out", destroy_user_session_path %>

<% end %>
</div>
<% if user_signed_in? %>
<%= form_for @card, :html=> {:multipart => true} do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <p><%=  t 'cardfront' %></p>
    <%= f.text_area:card_front, :class => "field" %>
  </div>
  <div class="field">
   <p><%=  t 'cardback'%></p>
    <%= f.text_area :card_back, :class => "field" %>
  </div>
  <div style="height:100px;">
 <div style="float:left;"><%= f.submit I18n.translate('addcard'), :class => "addcardhome" %></div>
  <% end %>
  <div style="float:right;"><%= button_to(I18n.translate('reviewcard'), reviewcards_path, :class => "addcardhome") %></div>
  
    </div>
  <br />
  <%= render 'shared/feed' %>
<% else %>
<br />
<center><% logo = image_tag("eyelogobig.png" , :alt => "Eye Candy", :class => "") %>
<%= link_to logo, root_path %></center>
<br />
<center><h2>Input, Review, Remember</h2></center>
<br />
<center><div class="addcardhome"><%= link_to "Sign up now!", new_user_registration_path, :class => "redbuttonlink" %></div></center>
<br />
<br />
<center><p>Already using Focus SRS?</p></center>
<br />
<div class="addcardhome"><%= link_to "Sign in!", new_user_session_path, :class => "redbuttonlink" %></div>

<br />
<%end%>